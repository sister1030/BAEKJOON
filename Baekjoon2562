import java.util.Scanner;

public class Main{
  public static void main(String[] args){
 Scanner sc = new Scanner(System.in);
  int[] arr = new int[9];
  int cnt = 0;
  int max = 0;

for(int i=0; i<arr.length; i++){
  arr[i]=sc.nextInt();
}
for(int i=0; i<arr.length; i++){
 if(arr[i]>max){
  max = arr[i];
  cnt = i+1;
 }
}
System.out.println(max);
System.out.println(cnt);
  }
}